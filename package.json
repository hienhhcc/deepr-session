{
  "name": "deepr-session",
  "version": "1.0.0",
  "description": "Deep work focus session desktop app",
  "license": "ISC",
  "author": "",
  "type": "module",
  "main": "dist-main/index.cjs",
  "scripts": {
    "dev": "tsx scripts/dev.ts",
    "dev:next": "next dev --port 3456 renderer",
    "dev:electron": "tsup --watch && electron .",
    "build:main": "tsup",
    "build:renderer": "next build renderer",
    "build": "npm run build:main && npm run build:renderer",
    "start": "electron .",
    "rebuild:sqlite": "electron-rebuild -f -w better-sqlite3",
    "pack": "npm run build && electron-builder --mac dir",
    "install-app": "npm run pack && bash scripts/install.sh"
  },
  "build": {
    "appId": "com.deepr.session",
    "productName": "Deepr Session",
    "files": [
      "dist-main/**/*",
      "renderer/out/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "app-icon/icon.icns",
        "to": "icon.icns"
      }
    ],
    "mac": {
      "icon": "app-icon/icon.icns",
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dir",
          "arch": [
            "arm64"
          ]
        }
      ]
    },
    "directories": {
      "output": "dist-electron"
    }
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@vscode/sudo-prompt": "^9.3.2",
    "better-sqlite3": "^12.6.2",
    "drizzle-orm": "^0.38.0",
    "howler": "^2.2.4",
    "recharts": "^2.15.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/howler": "^2.2.12",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.1.0",
    "electron": "^40.4.1",
    "electron-builder": "^25.1.0",
    "lucide-react": "^0.469.0",
    "next": "^15.1.0",
    "postcss": "^8.5.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^4.0.0",
    "tsup": "^8.3.0",
    "tsx": "^4.19.0",
    "tw-animate-css": "^1.2.0",
    "typescript": "^5.7.0"
  }
}
